{
  "name": "js-min-template",
  "version": "1.0.0",
  "description": "ES6快速开发一套符合业界标准和规范的三方库模板",
  "main": "dist/lib.cjs.js",
  "module": "dist/lib.es.js",
  "jsnext:main": "dist/js-min-template.mjs",
  "scripts": {
    "clean": "rimraf ./dist",
    "test": "cross-env NODE_ENV=test mocha --compilers js:@babel/register",
    "lint": "eslint src/*.js",
    "test:report": "nyc --reporter=text mocha --compilers js:@babel/register",
    "precommit": "lint-staged",
    "build": "npm run clean && npm run test && cross-env NODE_ENV=production rollup -c",
    "babel": "cross-env NODE_ENV=production babel src --out-dir lib"
  },
  "lint-staged": {
    "ignore": [
      "dist/*",
      "node_module/*"
    ],
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "repository": "https://github.com/stevenwujianpeng/js-min-template.git",
  "keywords": [
    "es6",
    "modules",
    "rollup",
    "bundle",
    "browser"
  ],
  "author": "stevenwujianpeng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevenwujianpeng/js-min-template/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/stevenwujianpeng/js-min-template/blob/master/README.md",
  "dependencies": {
    "@babel/runtime": "^7.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "assert": "^1.4.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "precommit": "^1.2.2",
    "rimraf": "^2.6.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0"
  }
}
